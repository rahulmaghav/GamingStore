    <security:http auto-config="true">
        <!-- Restrict URLs based on role -->
        
        <security:intercept-url pattern="/viewprofile" access="hasRole('ROLE_ADMIN')" />
        <security:intercept-url pattern="/addcategory" access="hasRole('ROLE_ADMIN')" />
        <security:intercept-url pattern="/addproduct" access="hasRole('ROLE_SUPPLIER')" />
        <security:intercept-url pattern="/updatecategory" access="hasRole('ROLE_ADMIN')" />
        <security:intercept-url pattern="/updateproduct" access="hasRole('ROLE_ADMIN') or hasRole('ROLE_SUPPLIER')" />
        <security:intercept-url pattern="/updateprofile" access="hasRole('ROLE_ADMIN')" />
        <security:intercept-url pattern="/viewoneprofile" access="hasRole('ROLE_ADMIN')" />
        
        <security:intercept-url pattern="/**" access="permitAll or hasRole('ROLE_USER') or hasRole('ROLE_ADMIN')" />
         
        
        <!-- Override default login and logout pages -->
        <security:form-login login-page="/loginpage" 
        					 username-parameter="UserName"
        					 password-parameter="Password"
                             default-target-url="/" 
                             authentication-failure-url="/loginpage?error=1" />
                             
        <security:logout logout-url="/logout" logout-success-url="/" />
        
         <security:csrf disabled="true"/>
    </security:http>

    <security:authentication-manager>
        <security:authentication-provider >
            
            <security:jdbc-user-service data-source-ref="dataSource" 
            users-by-username-query="select username,password,active from Profiles_Information where username=?" 
            authorities-by-username-query="SELECT USERNAME,ROLE FROM Profiles_Information  where USERNAME=?;" />
            
        </security:authentication-provider>
    </security:authentication-manager>

</beans>
